generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id   Int    @id @default(autoincrement())
  name String @unique

  User  User[]
  State State[]

  @@map("countries")
}

model State {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  countryId Int
  country   Country @relation(fields: [countryId], references: [id])

  City City[]

  @@map("states")
}

model City {
  id      Int    @id @default(autoincrement())
  name    String @unique
  stateId Int
  state   State  @relation(fields: [stateId], references: [id])

  Location Location[]

  @@map("cities")
}

model User {
  id         Int      @id @default(autoincrement())
  fullName   String
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  countryId  Int
  country    Country  @relation(fields: [countryId], references: [id])
  foneNumber String   @unique

  Session  Session[]
  Location Location[]
  Rent     Rent[]

  @@map("users")
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@map("sessions")
}

model Location {
  id            Int       @id @default(autoincrement())
  description   String
  pricePerNight Int
  isAvailable   Boolean   @default(true)
  bedrooms      Int
  hostId        Int
  host          User      @relation(fields: [hostId], references: [id])
  cityId        Int
  city          City      @relation(fields: [cityId], references: [id])
  Picture       Picture[]
  Rent          Rent[]

  @@map("locations")
}

model Picture {
  id         Int      @id @default(autoincrement())
  locationId Int
  location   Location @relation(fields: [locationId], references: [id])
  url        String

  @@map("pictures")
}

model Rent {
  id         Int      @id @default(autoincrement())
  renterId   Int
  renter     User     @relation(fields: [renterId], references: [id])
  locationId Int
  location   Location @relation(fields: [locationId], references: [id])
  checkin    DateTime @default(now())
  checkout   DateTime @default(now())
  totalPrice Int

  @@map("rents")
}
